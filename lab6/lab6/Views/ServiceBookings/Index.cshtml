@model IEnumerable<Lab6.Data.ServiceBooking>

<h2>Service Bookings</h2>
<table>
    <thead>
        <tr>
            <th>Licence Number</th>
            <th>Customer</th>
            <th>Car</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LicenceNumber</td>
                <td>@item.Customer.FirstName @item.Customer.LastName</td>
                <td>@item.Car.LicenceNumber</td>
                <td><a href="@Url.Action("Details", new { id = item.Id })">View</a></td>
            </tr>
        }
    </tbody>
</table>
