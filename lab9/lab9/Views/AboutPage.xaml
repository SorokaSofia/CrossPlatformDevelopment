<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Lab9.Views"
             x:Class="Lab9.Views.AboutPage"
             Title="About">
    <VerticalStackLayout Padding="20">
        <Label Text="App Name:" FontSize="Medium" />
        <Label Text="{Binding AppName}" FontSize="Large" />
        
        <Label Text="Version:" FontSize="Medium" Margin="0,10,0,0" />
        <Label Text="{Binding Version}" FontSize="Large" />
        
        <Label Text="Description:" FontSize="Medium" Margin="0,10,0,0" />
        <Label Text="{Binding Description}" FontSize="Large" />
        
        <Button Text="Back" Command="{Binding BackCommand}" Margin="0,20,0,0" />
    </VerticalStackLayout>
</ContentPage>
